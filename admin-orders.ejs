<!DOCTYPE html>
<html>
<head>
  <title>All Orders - Admin</title>
  <style>
    table {
      width: 90%;
      margin: auto;
      border-collapse: collapse;
    }
    th, td {
      border: 1px solid #333;
      padding: 10px;
      text-align: center;
    }
    h2 {
      text-align: center;
      margin: 20px 0;
    }
  </style>
</head>
<body>
  <h2>All Orders</h2>

  <% if (orders.length > 0) { %>
    <table>
      <tr>
        <th>Email</th>
        <th>Item</th>
        <th>Quantity</th>
        <th>Ordered At</th>
      </tr>
      <% orders.forEach(order => { %>
        <tr>
          <td><%= order.email %></td>
          <td><%= order.item %></td>
          <td><%= order.quantity %></td>
          <td><%= new Date(order.orderedAt).toLocaleString() %></td>
        </tr>
      <% }) %>
    </table>
  <% } else { %>
    <p style="text-align: center;">No orders found.</p>
  <% } %>
</body>
</html>
